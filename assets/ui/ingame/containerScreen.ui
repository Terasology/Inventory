{
    "type": "containerScreen",
    "skin": "inventoryDefault",
    "contents": {
        "type": "relativeLayout",
        "contents": [
            {
                "type": "UILabel",
                "id": "containerTitle",
                "family": "title",
                "layoutInfo": {
                    "height": 30,
                    "use-content-width": true,
                    "position-left": {
                        "target": "LEFT",
                        "widget": "container"
                    },
                    "position-bottom": {
                        "target": "TOP",
                        "widget": "container",
                        "offset": 10
                    }
                }
            },
            {
                "type": "InventoryGrid",
                "id": "container",
                "maxHorizontalCells": 10,
                "layoutInfo": {
                    "use-content-width": true,
                    "use-content-height": true,
                    "position-horizontal-center": {},
                    "position-vertical-center": {}
                }
            },
            {
                "type": "UILabel",
                "id": "inventoryTitle",
                "family": "title",
                "text": "${engine:menu#category-inventory}",
                "layoutInfo": {
                    "height": 30,
                    "use-content-width": true,
                    "position-left": {
                        "target": "LEFT",
                        "widget": "container"
                    },
                    "position-top": {
                        "target": "BOTTOM",
                        "widget": "container",
                        "offset": 16
                    }
                }
            },
            {
                "type": "InventoryGrid",
                "id": "inventory",
                "maxHorizontalCells": 10,
                "layoutInfo": {
                    "use-content-width": true,
                    "use-content-height": true,
                    "position-horizontal-center": {},
                    "position-top": {
                        "target": "BOTTOM",
                        "widget": "inventoryTitle",
                        "offset": 10
                    }
                }
            }
        ]
    }
}
